<div class="container">
  <%= devise_error_messages! %>
  <div class="row justify-content-md-center">
    <div class="col-md-8 col-12">
      <div class="card card-style">
        <div class="card-header">
          <h4 class="text-center card-title">Зареєструватися на сайті</h4>
          <hr>
          <span class="text-center">
            <%= link_to "Увійти", new_session_path(resource_name) %> в систему.
          </span>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label 'Електронна адреса'  %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            
            <div class="row">
              <div class="col-6">
                <div class="form-group">
                  <%= f.label 'Ім\'я' %>
                  <%= f.text_field :first_name, class: "form-control" %>
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <%= f.label 'Прізвище' %>
                  <%= f.text_field :last_name, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="form-group"">
              <%= f.label 'Завантажити фотографію' %><br>    
              <%= f.file_field :image %>
            </div>

            <div class="form-group"">
              <%= f.label 'Пароль' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> символів мінімум)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group"">
              <%= f.label 'Підтвердження паролю' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <hr>
            <%= f.submit "Зареєструватися", class: "btn btn-light btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>