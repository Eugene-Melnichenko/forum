<div class="container">
  <%= devise_error_messages! %>
  <div class="row justify-content-md-center">
    <div class="col-md-8 col-12">
      <div class="card card-style">
        <div class="card-header">
          <h3 class="text-center">Забули свій пароль?</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

            <div class="form-group">
              <%= f.label 'Електронна_адреса' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Прислати мені інструкцію щодо скидання пароля", class: "btn btn-light btn-block" %>
            </div>
          <% end %>
          <%= link_to "Увійти", new_session_path(resource_name) %> в систему.
          <br>
          <%= link_to "Зареєструвати", new_registration_path(resource_name) %> новий акаунт
          <br>
          <%= link_to "Повторно надіcлати інструкцію з підтвердженням", new_confirmation_path(resource_name) %>
        </div>
     </div>
    </div>
  </div>
</div>