<div class="container">
  <%= devise_error_messages! %>
  <div class="row justify-content-md-center">
    <div class="col-md-8 col-12">
      <div class="card card-style">
        <div class="card-header">
          <h4 class="text-center card-title">Увійти у свій обліковий запис</h4>
          <hr>
          <span class="text-center">
            <%= link_to "Зареєструйте", new_registration_path(resource_name) %> новий акаунт.
          </span>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label 'Електронна_адреса' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              <small class="form-text text-muted">
                Ми ніколи не будемо розповсюджувати вашу електронну пошту.
              </small>
            </div>
            <div class="form-group">
              <%= f.label 'Пароль' %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
            <%= link_to "Забули пароль?", new_password_path(resource_name) %>
            <hr>
            <div class="form-group">
              <%= f.submit "Увійти до системи", class: "btn btn-light btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>