<div class="container form-style-background">
  <h2 class="text-center"><%= dashboard_logotype %></h2>
  <h3 class="text-center"><%= dashboard_title_text_1 %></h3>
  <p class="lead">
    <%= dashboard_text_1 %>
  </p>
  <div class="row">
    <div class="col-4">
      <iframe width="100%" height="300px" class="img-style"
      src=<%= dashboard_url_1 %> frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="col-4">
      <iframe width="100%" height="300px" class="img-style"
      src=<%= dashboard_url_2 %> frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="col-4">
      <iframe width="100%" height="300px" class="img-style"
      src=<%= dashboard_url_3 %> frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-12">
      <h3 class="text-center"><%= dashboard_title_text_2 %></h3>
      <p class="lead">
        <%= image_tag("2.gif", class: "img-style float-left", style: "width: 200px; height: 200px" ) %>
        <iframe id="_mcf" class="iframe-1-style float-right" width="550" height="502" frameborder="0" scrolling="no" style="border:1px solid #000000;" src="http://www.imooncal.com/cs/cal.php?c=12656387572279401&amp;x=&amp;tz=2&amp;hs=&amp;bgp=&amp;oa=on&amp;s=&amp;m=&amp;y=&amp;rp="></iframe>
        <%= dashboard_text_2 %>
      </p>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-12">
      <h3 class="text-center"><%= dashboard_title_text_3 %></h3>
      <p class="lead">
        <%= dashboard_text_3 %>
      </p>
      <div class="card-columns">
        <% @posts_admin.each do |post| %>
          <div class="card card-style">
            <div class="card-body">
              <%= image_tag(post.image_url(:mini_image).to_s, class: "card-img-top") if post.image? %>
              <h4 class="text-center"><%= post.title %></h4>
              <p class="card-text lead"><%= post.summary %></p>
              <%= link_to 'Переглянути', admins_post_path(post), class: "btn btn-outline-light btn-block" %>
              <% if admin_signed_in? %>
                <%= link_to 'Редагувати', edit_admins_post_path(post), 
                  class: "btn btn-outline-success btn-block" %>
                <%= link_to 'Видалити', admins_post_path(post), 
                  class: "btn btn-outline-danger btn-block", method: :delete,
                  data: { confirm: 'Ви впевнені?' } %>
              <% end %> 
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>