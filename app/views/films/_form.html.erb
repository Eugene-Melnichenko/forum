<%= form_with(model: @film, url: adress_url, local: true) do |form| %>

  <%= render 'layouts/error_messages', object: @film %>

  <div class="form-group ">
    <%= form.label 'Назва фільму', class: "lead text-info" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label 'Посилання на відео', class: "lead text-info" %>
    <%= form.text_area :url, class: "form-control", rows: "3" %>
  </div>

  <div class="form-group">      
    <%= form.submit button_text, class: "btn btn-info btn-block btn-lg" %>
  </div>
  
  <% if @film.url? %>
      <iframe width="100%" height="500px" class="img-style"
      src=<%= @film.url %> frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  <% end %>
<% end %>