<div class="container form-style-background">
  <div class="row">
    <div class="col-4">
      <%= link_to 'Повернутись до статей', admins_posts_path, class: "btn btn-light btn-lg btn-block" %>
    </div>
    <% if admin_signed_in? %>
      <div class="col-4">
        <%= link_to 'Редагувати', edit_admins_post_path(@post_admin), 
          class: "btn btn-success btn-lg btn-block" %>
      </div>
      <div class="col-4">
        <%= link_to 'Видалити', admins_post_path(@post_admin), 
          class: "btn btn-danger btn-lg btn-block", method: :delete,
          data: { confirm: 'Ви впевнені?' } %>
      </div>
    <% end %>
    </div>
  <hr>
  <p class="lead">
    <%= image_tag @post_admin.image_url(:norm_image).to_s, class: "img-thumbnail float-right", style: "margin: 3px;" %>
    <%= @post_admin.body %>
  </p>
  <hr>
  <%= render 'disqus' %>
</div>