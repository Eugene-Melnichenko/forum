<%= form_with(model: @post_admin, url: adress_url, local: true) do |form| %>

  <%= render 'layouts/error_messages', object: @post_admin %>

  <div class="form-group ">
    <%= form.label 'Титульна назва статті', class: "lead text-info" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label 'Коротке описання статті', class: "lead text-info" %>
    <%= form.text_area :summary, class: "form-control", rows: "3" %>
  </div>

  <div class="row">
    <% if @post_admin.image? %>
      <div class="col-8">
        <div class="form-group">
          <%= form.label 'Основний текст статті', class: "lead text-info" %>
          <%= form.text_area :body, class: "form-control", rows: "12" %>
        </div>
      </div>
      <div class="col-4">
        <%= image_tag(@post_admin.image_url(:norm_image).to_s, class: "img-thumbnail" ) %>
        <hr>
        <%= form.file_field :image %>
      </div>
    <% elsif !@post_admin.image? %>
      <div class="col-12">
        <div class="form-group">
          <%= form.label 'Основний текст статті', class: "lead text-info" %>
          <%= form.text_area :body, class: "form-control", rows: "12" %>
          <hr>
          <%= form.file_field :image %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-group">      
    <%= form.submit button_text, class: "btn btn-info btn-block btn-lg" %>
  </div>
  
<% end %>