<div class="container">
  <%= devise_error_messages! %>
  <div class="row justify-content-center">
    <div class="col-md-8 col-12">
      <div class="card card-style">
        <div class="card-header">
          <h4 class="text-center card-title">Зареєструвати адміна на сайті</h4>
          <hr>
          <span class="text-center">
            <%= link_to "Увійти", new_session_path(resource_name) %> в систему.
          </span>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label 'Електронна адреса'  %>
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label 'Пароль' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> символів мінімум)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label 'Підтвердження паролю' %>
              <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.submit "Зареєструватися", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>