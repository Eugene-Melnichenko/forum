<div class="container form-style-background">
  <h3 class="text-center">Редагувати дані на головній сторінці</h3>

  <%= form_with(model: @dashboard, url: admins_dashboards_url  ,local: true) do |form| %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :text_1 %>
      <%= form.text_area :text_1, class: "form-control", rows: "4" %>
    </div>

    <div class="form-group">
      <%= form.label :text_2 %>
      <%= form.text_area :text_2, class: "form-control", rows: "4" %>
    </div>

    <div class="form-group">
      <%= form.label :text_3 %>
      <%= form.text_area :text_3, class: "form-control", rows: "4" %>
    </div>

    <%= form.submit 'Зберегти', class: "btn btn-primary btn-block" %>
    <br>
  <% end %>
</div>